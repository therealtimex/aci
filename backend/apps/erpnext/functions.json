    {
        "name": "ERPNEXT__LIST_DOCUMENTS",
        "description": "Lists documents of a specified DocType",
        "tags": ["documents", "list"],
        "visibility": "public",
        "active": true,
        "protocol": "rest",
        "protocol_data": {
            "method": "GET",
            "path": "/api/resource/{doctype}",
            "server_url": "https://erp.realtimex.co"
        },
        "parameters": {
            "type": "object",
            "properties": {
                "path": {
                    "type": "object",
                    "description": "Path parameters",
                    "properties": {
                        "doctype": {
                            "type": "string",
                            "description": "The DocType to list documents from (e.g., 'Customer', 'Sales Order')."
                        }
                    },
                    "required": ["doctype"],
                    "visible": ["doctype"],
                    "additionalProperties": false
                },
                "query": {
                    "type": "object",
                    "description": "Query parameters",
                    "properties": {
                        "fields": {
                            "type": "string",
                            "description": "JSON string of a list of fields to return. Example: '[\"name\", \"customer_name\"]'."
                        },
                        "filters": {
                            "type": "string",
                            "description": "JSON string of a list of filters to apply to the query. Each filter is a list of three elements: [field, operator, value]. Available operators: =, !=, <, >, <=, >=, like, not like, in, not in, is, is not, between. E.g., '[[\"customer_name\",\"=\",\"John Doe\"]]'."
                        },
                        "or_filters": {
                            "type": "string",
                            "description": "Similar to 'filters', but joins the specified filters using the OR SQL operator. E.g., '[[\"status\",\"=\",\"Open\"],[\"priority\",\"=\",\"High\"]]'."
                        },
                        "order_by": {
                            "type": "string",
                            "description": "The field to sort the results by, and the sort order. The format is 'fieldname asc' or 'fieldname desc'. E.g., 'creation asc'."
                        },
                        "limit_start": {
                            "type": "integer",
                            "description": "The number of documents to skip.",
                            "default": 0
                        },
                        "limit_page_length": {
                            "type": "integer",
                            "description": "The number of documents to return.",
                            "default": 20
                        }
                    },
                    "required": [],
                    "visible": ["fields", "filters", "or_filters", "order_by", "limit_start", "limit_page_length"],
                    "additionalProperties": false
                }
            },
            "required": ["path"],
            "visible": ["path", "query"],
            "additionalProperties": false
        }
    },
